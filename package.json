{
  "name": "sales-system",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "init-db": "psql -U admin -d sales_db -f scripts/init-db.sql",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:setup": "docker-compose -f docker-compose.test.yml up -d && sleep 5",
    "test:teardown": "docker-compose -f docker-compose.test.yml down",
    "test:full": "npm run test:setup && npm run test && npm run test:teardown",
    "test:integration": "jest src/tests/integration",
    "test:unit": "jest src/tests/unit"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  }
}
